    "host": "localhost:7100",
    "basePath": "/",
    "schemes": ["http"],
    "paths": {
        "/users": {
            "get": {
                "tags": ["User Profile Management"],
                "description": "Get all users",
                "responses": {
                    "200": {
                        "description": "OK"
                    },
                    "500": {
                        "description": "Internal Server Error"
                    }
                }
            }
        },
        "/users/{id}": {
            "get": {
                "tags": ["User Profile Management"],
                "description": "Get a user by their githubUserId",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK"
                    },
                    "404": {
                        "description": "Not Found"
                    },
                    "500": {
                        "description": "Internal Server Error"
                    }
                }
            },
            "put": {
                "tags": ["User Profile Management"],
                "description": "By using the githubUserId, update the user profile for the fields: username, displayName, firstName, lastName, userRole, email, password, profilePic. After inputting the password in the body, it will be hashed and stored in the database. The profilePic will be stored in the database as a string.",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "body",
                        "in": "body",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "username": {
                                    "example": "any"
                                },
                                "displayName": {
                                    "example": "any"
                                },
                                "firstName": {
                                    "example": "any"
                                },
                                "lastName": {
                                    "example": "any"
                                },
                                "userRole": {
                                    "example": "any"
                                },
                                "email": {
                                    "example": "any"
                                },
                                "password": {
                                    "example": "any"
                                },
                                "profilePic": {
                                    "example": "any"
                                }
                            }
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK"
                    },
                    "404": {
                        "description": "Not Found"
                    },
                    "500": {
                        "description": "Internal Server Error"
                    }
                }
            }
        }
    }
